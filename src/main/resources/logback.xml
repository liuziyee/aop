<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="PATH" value="./log"></property>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%-13X{TIMESTAMP} %gray(%-5level) %yellow([%thread]) %yellow(%-30logger{30}:%-4line) %yellow(%-18X{LOG_ID}) %msg%n</Pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>